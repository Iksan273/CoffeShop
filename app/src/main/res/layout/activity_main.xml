                    <EditText
                        android:id="@+id/txtMilk"
                        android:layout_width="43dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="93dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="100dp"
                        android:ems="10"
